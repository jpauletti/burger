<div class="container mb-5">
    <div class="row mt-4 text-center">
        <div class="col-md-12">
            <img src="assets/images/burger.png" width="150" alt="burger" class="mb-4">
            <h1>Eat&bull;a&bull;Burger</h1>
        </div>
    </div>

    <div class="row justify-content-center text-center mt-3">
        <div class="col-md-6">
            Enter a burger you'd like to eat & hit the submit button!
        </div>
    </div>

    <div class="row mt-3 text-center">
        <div class="col-md-12">
            <form class="form-inline justify-content-center">
                <div class="form-group mx-sm-3 mb-2">
                    <label for="burger-name" class="sr-only">Enter your burger</label>
                    <input type="text" class="form-control" id="burger-name" placeholder="Enter your burger">
                </div>
                <button type="submit" id="add-burger" class="btn btn-primary mb-2">Submit</button>
            </form>
        </div>
    </div>


